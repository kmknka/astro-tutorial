---
const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen bg-white text-gray-900 font-sans">
    <header class="bg-blue-600 text-white p-4 shadow">
      <nav class="flex gap-4">
        <a href="/" class="hover:underline">ホーム</a>
        <a href="/about/" class="hover:underline">概要</a>
        <a href="/blog/" class="hover:underline">ブログ</a>
      </nav>
    </header>

    <main class="max-w-2xl mx-auto p-6 md:p-12 bg-gray-50 rounded-lg shadow my-8">
      <slot />
    </main>

    <footer class="text-center text-sm text-gray-500 py-4">
      &copy; 2025 My Astro Blog
    </footer>
  </body>
</html>
