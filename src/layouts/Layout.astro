---
// src/layouts/Layout.astro
import '../styles/global.css'; // TailwindのグローバルCSS読み込み
const { title } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ?? 'Astro Blog'}</title>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <header class="py-4 bg-white shadow-sm mb-8">
      <nav class="container mx-auto flex space-x-4">
        <a href="/" class="text-blue-600 hover:underline">ホーム</a>
        <a href="/about/" class="text-blue-600 hover:underline">概要</a>
        <a href="/blog/" class="text-blue-600 hover:underline">ブログ</a>
      </nav>
    </header>
    <main class="container mx-auto px-4">
      <slot />
    </main>
    <footer class="py-8 text-center text-sm text-gray-500">
      © {new Date().getFullYear()} 私のAstroブログ
    </footer>
  </body>
</html>
